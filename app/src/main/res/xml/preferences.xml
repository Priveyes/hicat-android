<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="hardware_decoding"
        android:summary="Decoding h.264 video"
        android:title="Enable hardware decoding" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="rtsp://192.168.1.1/hicat.264"
        android:key="rtps_url"
        android:inputType="textUri"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="RTSP URL" />

    <EditTextPreference
        android:defaultValue="ws://192.168.1.1:7681"
        android:key="websocket_url"
        android:inputType="textUri"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Websocket URL" />

</PreferenceScreen>